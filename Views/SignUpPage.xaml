<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:TaskFlow.ViewModels"
             x:Class="TaskFlow.SignUpPage"
             BackgroundColor="Black">

    <ContentPage.BindingContext>
        <vm:SignUpViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,*" ColumnDefinitions="0.25*,0.50*,0.25*"
          VerticalOptions="Center"
          HorizontalOptions="Fill">

        <!-- Logo -->
        <Border Grid.Row="0" Grid.Column="1"
                HeightRequest="100"
                WidthRequest="100"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                StrokeShape="RoundRectangle 50"
                StrokeThickness="0"
                Margin="0,0,0,20">
            <Image Source="taskflow_logo_small.png" Aspect="AspectFill"
                   HeightRequest="100"
                   WidthRequest="100" />
        </Border>

        <!-- Title -->
        <Label Grid.Row="1" Grid.Column="1"
               Text="Sign Up"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               VerticalOptions="End"
               Margin="0,0,0,20" />
        
        <!-- Input fields -->
        <Entry Grid.Row="2" Grid.Column="1"
               Placeholder="First Name"
               Text="{Binding FirstName}"
               TextColor="White"
               HorizontalOptions="Fill"
               WidthRequest="300"
               Margin="0,0,0,10" />

        <Entry Grid.Row="3" Grid.Column="1"
               Placeholder="Last Name"
               Text="{Binding LastName}"
               TextColor="White"
               HorizontalOptions="Fill"
               WidthRequest="300"
               Margin="0,0,0,10" />

        <Entry Grid.Row="4" Grid.Column="1"
               Placeholder="Email"
               Keyboard="Email"
               Text="{Binding Email}"
               TextColor="White"
               HorizontalOptions="Fill"
               WidthRequest="300"
               Margin="0,0,0,10" />

        <Entry Grid.Row="5" Grid.Column="1"
               Placeholder="Password"
               IsPassword="True"
               Text="{Binding Password}"
               TextColor="White"
               HorizontalOptions="Fill"
               WidthRequest="300"
               Margin="0,10,0,10" />

        <Entry Grid.Row="6" Grid.Column="1"
               Placeholder="Confirm Password"
               IsPassword="True"
               Text="{Binding ConfirmPassword}"
               TextColor="White"
               HorizontalOptions="Fill"
               WidthRequest="300"
               Margin="0,10,0,10" />
        
        <!-- Buttons -->
        <Button Grid.Row="7" Grid.Column="1"
                Text="Sign Up"
                Command="{Binding SignUpCommand}"
                Background="Red"
                FontSize="15"
                FontAttributes="Bold"
                TextColor="White"
                HorizontalOptions="Center"
                WidthRequest="120"
                Margin="0,10,0,5" />

        <Button Grid.Row="8" Grid.Column="1"
                Text="Already have an account? Log in"
                Command="{Binding GoToLoginCommand}"
                BackgroundColor="Transparent"
                TextColor="Blue"
                BorderWidth="0"
                HorizontalOptions="Center"
                WidthRequest="250" />
    </Grid>
</ContentPage>