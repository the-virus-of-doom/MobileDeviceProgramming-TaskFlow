<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:TaskFlow.ViewModels"
             x:Class="TaskFlow.LoginPage"
             BackgroundColor="Black">

    <ContentPage.BindingContext>
        <vm:LoginPageViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,*" ColumnDefinitions="0.25*,0.50*,0.25*"
          VerticalOptions="Center"
          HorizontalOptions="Center">

        <!-- Logo -->
        <Border Grid.Row="0" Grid.Column="1"
                HeightRequest="100"
                WidthRequest="100"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                StrokeShape="RoundRectangle 50"
                StrokeThickness="0"
                Margin="0,0,0,20">
            <Image Source="taskflow_logo_small.png" Aspect="AspectFill"
                   HeightRequest="100"
                   WidthRequest="100" />
        </Border>

        <!-- Title -->
        <Label Grid.Row="1" Grid.Column="1"
               Text="Login"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               VerticalOptions="End"
               Margin="0,0,0,20" />
        <!-- Input fields -->
        <Entry Grid.Row="2" Grid.Column="1"
               Placeholder="Email"
               Keyboard="Email"
               TextColor="White"
               HorizontalOptions="Center"
               WidthRequest="300"
               Margin="0,0,0,10"
               Text="{Binding Email}" />

        <Entry Grid.Row="3" Grid.Column="1"
               Placeholder="Password"
               IsPassword="True"
               TextColor="White"
               HorizontalOptions="Center"
               WidthRequest="300"
               Margin="0,10,0,10"
               Text="{Binding Password}" />

        <!-- Buttons -->
        <Button Grid.Row="4" Grid.Column="1"
                Text="Login"
                Command="{Binding LoginCommand}"
                Background="Red"
                FontSize="15"
                FontAttributes="Bold"
                TextColor="White"
                HorizontalOptions="Center"
                WidthRequest="120"
                Margin="0,10,0,5" />

        <Button Grid.Row="5" Grid.Column="1"
                Text="Don't have an account? Sign up"
                Command="{Binding GoToSignUpCommand}"
                BackgroundColor="Transparent"
                TextColor="Blue"
                BorderWidth="0"
                HorizontalOptions="Center"
                WidthRequest="250" />
    </Grid>
</ContentPage>