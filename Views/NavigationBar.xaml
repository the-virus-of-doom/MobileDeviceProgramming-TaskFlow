<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:TaskFlow.ViewModels"
             x:Class="TaskFlow.NavigationBar">
    <ContentView.BindingContext>
        <vm:NavigationBarViewModel />
    </ContentView.BindingContext>
    <Grid Padding="10" BackgroundColor="White" ColumnSpacing="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <VerticalStackLayout Grid.Column="0" HorizontalOptions="Center">
            <ImageButton Source="home.png"
                         Command="{Binding HomeCommand}"
                         MaximumHeightRequest="40"
                         MaximumWidthRequest="80"
                         BackgroundColor="White"/>
            <Label Text="Home" FontSize="12" TextColor="Black" HorizontalOptions="Center"/>
        </VerticalStackLayout>
        <VerticalStackLayout Grid.Column="1" HorizontalOptions="Center">
            <ImageButton Source="clipboard.png"
                         MaximumHeightRequest="40"
                         MaximumWidthRequest="80"
                         BackgroundColor="White"/>
            <Label Text="Task" FontSize="12" TextColor="Black" HorizontalOptions="Center"/>
        </VerticalStackLayout>
        <VerticalStackLayout Grid.Column="2" HorizontalOptions="Center">
            <ImageButton Source="calendar.png"
                         MaximumHeightRequest="40"
                         MaximumWidthRequest="80"
                         BackgroundColor="White"/>
            <Label Text="Calendar" FontSize="12" TextColor="Black" HorizontalOptions="Center"/>
        </VerticalStackLayout>
        <VerticalStackLayout Grid.Column="3" HorizontalOptions="Center">
            <ImageButton Source="notes.png"
                         Command="{Binding NotesCommand}"
                         MaximumHeightRequest="40"
                         MaximumWidthRequest="80"
                         BackgroundColor="White"/>
            <Label Text="Notes" FontSize="12" TextColor="Black" HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </Grid>
</ContentView>