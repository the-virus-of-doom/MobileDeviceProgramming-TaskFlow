<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TaskFlow"
             xmlns:vm="clr-namespace:TaskFlow.ViewModels"
             x:Class="TaskFlow.HomePage">

    <ContentPage.BindingContext>
        <vm:HomePageViewModel />
    </ContentPage.BindingContext>

    <Grid>
        <!-- Main Content Grid -->
        <Grid RowDefinitions="*,Auto">
            <Grid>
                <!-- Notifications Icon -->
                <Image Source="bell.png"
                       Aspect="AspectFill"
                       HeightRequest="35"
                       WidthRequest="35"
                       HorizontalOptions="Start"
                       VerticalOptions="Start"
                       Margin="20" />
            </Grid>
            <!-- User Name -->
            <StackLayout Padding="20" Spacing="20">
                <Label x:Name="UserNameLabel" 
                       Text="{Binding UserName}"
                       FontSize="20" 
                       HorizontalOptions="Center"
                       VerticalOptions="Start"/>

                <Label Text="Tasks"
                       FontSize="24"
                       Margin="0,10,0,0"/>  

                <!-- Starred Notes Section -->
                <Label Text="Starred Notes"
                       FontSize="24"
                       Margin="0,10,0,0"/>
                <CollectionView x:Name="StarredNotesCollection"
                                ItemsSource="{Binding StarredNotes}"
                                SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border
                                BackgroundColor="LightGray"
                                StrokeShape="RoundRectangle 8"
                                Margin="0,0,0,10"
                                Padding="0">
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:HomePageViewModel}}, Path=NoteTappedCommand}"
                                        CommandParameter="{Binding .}" />
                                </Border.GestureRecognizers>
                                <StackLayout Padding="10">
                                    <Label Text="{Binding Title}" 
                                           FontAttributes="Bold" 
                                           TextDecorations="Underline"
                                           LineBreakMode="TailTruncation" 
                                           MaxLines="1"/>
                                    <Label Text="{Binding Content}" 
                                           LineBreakMode="TailTruncation" 
                                           MaxLines="2"/>
                                    <Label Text="{Binding Timestamp}" 
                                           FontSize="10" 
                                           TextColor="Gray"/>
                                </StackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <Button Text="Sign Out" 
                        Command="{Binding SignOutCommand}"
                        Background="Red"
                        FontSize="15"
                        TextColor="White"
                        WidthRequest="120"/>
            </StackLayout>
            <!-- Navigation bar at the bottom -->
            <local:NavigationBar Grid.Row="1" />
        </Grid>

        <!-- User Icon -->
        <AbsoluteLayout IsClippedToBounds="False">
            <Border
                HeightRequest="35"
                WidthRequest="35"
                StrokeShape="RoundRectangle 35"
                StrokeThickness="1"
                BackgroundColor="White"
                Margin="0,20,20,0"
                AbsoluteLayout.LayoutBounds="1,0,AutoSize,AutoSize"
                AbsoluteLayout.LayoutFlags="PositionProportional">
                <ImageButton
                    x:Name="UserButton"
                    Source="user.png"
                    BackgroundColor="Transparent"
                    HeightRequest="25"
                    WidthRequest="25"
                    Command="{Binding UserButtonCommand}"/>
            </Border>
        </AbsoluteLayout>
    </Grid>
</ContentPage>
