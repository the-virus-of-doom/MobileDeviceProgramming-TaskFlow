<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TaskFlow.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TaskFlow"
    xmlns:pages="clr-namespace:TaskFlow"
    Title="TaskFlow">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:HomePage}"
        Route="MainPage" />

    <ShellContent
        Title="Notes"
        ContentTemplate="{DataTemplate pages:NotesPage}"
        Route="NotesPage" />
    <ShellContent
        Title="To-do List"
        ContentTemplate="{DataTemplate pages:TodoPage}"
        Route="TodoPage" />
    <!-- TODO: wire up calendar to side nav -->
    <!--<ShellContent
        Title="Calendar"
        ContentTemplate="{DataTemplate pages:CalendarPage}"
        Route="CalendarPage" />-->
    <ShellContent
        Title="Settings"
        ContentTemplate="{DataTemplate pages:SettingsPage}"
        Route="SettingsPage" />
    

    <ShellContent Route="ViewNotePage" ContentTemplate="{DataTemplate local:ViewNotePage}" />

</Shell>
